---
import DefaultLayout from '../../layouts/DefaultLayout.astro'
import { Card, Pagination, Breadcrumbs, BreadcrumbsItem } from 'accessible-astro-components'

export async function getStaticPaths() {
  	const data = [{
		title: "New Site",
		id: "1",
		author: "Axsiow",
		tags: "test",
		},
	];

	return data.map(({ title, id, author, tags }) => {
    return {
      params: { id:'1' },
      props: { title, author },
    };
  });
}

const { title, id, author } = Astro.props;
---
<DefaultLayout title="Blog" description="test">
	<section class="my-12">
		<div class="space-content container">
			<Breadcrumbs>
				<BreadcrumbsItem href="/" label="Home" />
				<BreadcrumbsItem href="/blog" label="Blog" />
				<BreadcrumbsItem currentPage={true} label={title} />
			</Breadcrumbs>
			<h1>Blog</h1>
			<p class="text-2xl">TEST</p>
			<h1>The current URL pathname is: {Astro.url.pathname}</h1>
			<h1>The title is :{id}</h1>
		</div>
	</section>
</DefaultLayout>
  
<style lang="scss">
ul {
	display: grid;
	grid-template-columns: 1fr;
	grid-gap: 4rem;
  
	@media (min-width: 550px) {
		grid-template-columns: repeat(2, 1fr);
		grid-gap: 2rem;
	}
  
	@media (min-width: 950px) {
		grid-template-columns: repeat(3, 1fr);
	}
}
</style>